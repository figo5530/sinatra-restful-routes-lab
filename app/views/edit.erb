<h1>Recipe Name <%= @r.name %></h1>
<h2>Ingredients' List <%= @r.ingredients %></h2>
<h2>Cooking Time <%= @r.cook_time %></h2>
<form method="POST" action="/recipes/<%= @r.id %>">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<br/>
<label>Name: <input type="text" name="name"></label>
<br/>
<label>Ingredients: <input type="text" name="ingredients"></label>
<br/>
<label>Cooking Time: <input type="text" name="cook_time"></label>
<br/>
<input type="submit">
</form>